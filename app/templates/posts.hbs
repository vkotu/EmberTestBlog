<div class="row">
<div class="col-md-6">
<ul>

        {{#each mod in model}}

        <li>
               {{#link-to 'posts.post' mod}} {{mod.title}}  {{/link-to}} by {{mod.author}}
            <a href="#" {{action 'deletePost' mod}}>Delete!</a>

        </li>

        {{/each}}
</ul>
  {{outlet}}
  </div>
<div class="col-md-6">
<p>Add new post</p>

    <div><label> Title: </label>{{input value=newTitle }}</div>
    <div><label> author: </label>{{input value=newAuthor }}</div>
    <button {{action 'addPost'}} >Add </button>
</div>

</div>